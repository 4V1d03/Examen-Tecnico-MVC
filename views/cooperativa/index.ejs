<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Movimientos de Cooperativa</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Movimientos de Cooperativa</h2>

        <div class="d-flex justify-content-between mb-3">
            <a href="/Empleado2" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Registrar Movimiento
            </a>
            <a href="/" class="btn btn-secondary">
                <i class="bi bi-house-door"></i> Menú Principal
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>Código Empleado</th>
                        <th>Tipo</th>
                        <th>Monto</th>
                        <th>Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    <% movimientos.forEach((mov) => { %>
                        <tr>
                            <td><%= mov.id_transaccion %></td>
                            <td><%= mov.codigo_empleado %></td>
                            <td><%= mov.tipo %></td>
                            <td>Lps. <%= mov.monto %></td>
                            <td><%= mov.fecha %></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
