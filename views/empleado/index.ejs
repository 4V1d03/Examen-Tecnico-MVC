<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Empleados</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Lista de Empleados</h2>
        
        <div class="d-flex justify-content-between mb-3">
            <a href="/crear5" class="btn btn-success">
                <i class="bi bi-plus-circle"></i> Agregar Empleado
            </a>
            <a href="/" class="btn btn-secondary">
                <i class="bi bi-house-door"></i> Menú Principal
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>Código</th>
                        <th>Nombre</th>
                        <th>Fecha de Ingreso</th>
                        <th>Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    <% empleados.forEach((empleado) => { %>
                        <tr>
                            <td><%= empleado.codigo %></td>
                            <td><%= empleado.nombre %></td>
                            <td><%= empleado.fecha_ingreso %></td>
                            <td>
                                <a href="/crear7/<%= empleado.codigo %>" class="btn btn-warning btn-sm">
                                    <i class="bi bi-cash"></i> Pago
                                </a>
                                <a href="/crear6/<%= empleado.codigo %>" class="btn btn-info btn-sm text-white">
                                    <i class="bi bi-eye"></i> Cooperativa
                                </a>
                            </td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
