<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Lista de Pagos</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">Lista de Pagos</h2>

        <div class="d-flex justify-content-between mb-3">
            <a href="/Empleado2" class="btn btn-secondary">
                <i class="bi bi-arrow-left"></i> Volver a Empleados
            </a>
        </div>

        <div class="table-responsive">
            <table class="table table-bordered text-center">
                <thead class="table-dark">
                    <tr>
                        <th>ID</th>
                        <th>CÃ³digo Empleado</th>
                        <th>Fecha de Pago</th>
                        <th>Horas Trabajadas</th>
                        <th>Valor Hora</th>
                        <th>Salario Bruto</th>
                        <th>Bono Normal</th>
                        <th>Bono Extra</th>
                        <th>Salario Neto</th>
                    </tr>
                </thead>
                <tbody>
                    <% pagos.forEach((pago) => { %>
                        <tr>
                            <td><%= pago.id_pago %></td>
                            <td><%= pago.codigo_empleado %></td>
                            <td><%= pago.fecha_pago %></td>
                            <td><%= pago.horas_trabajadas %></td>
                            <td>Lps. <%= pago.valor_hora %></td>
                            <td>Lps. <%= pago.salario_bruto %></td>
                            <td>Lps. <%= pago.bono_normal %></td>
                            <td>Lps. <%= pago.bono_extra %></td>
                            <td><strong>Lps. <%= pago.salario_neto %></strong></td>
                        </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</body>
</html>
